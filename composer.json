{
  "name": "wpify/plugin-skeleton",
  "description": "Wpify Plugin Skeleton",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "config": {
	"platform-check": false
  },
  "autoload": {
	"psr-4": {
	  "WpifyPluginSkeleton\\": "src/"
	}
  },
  "scripts": {
	"post-create-project-cmd": [
	  "npm install && npm run build && composer rename-wpify-plugin && composer remove --dev wpify/plugin-composer-scripts && composer require --dev wpify/scoper:^2"
	]
  },
  "require": {
	"php": ">=7.3.0||^8.0.0",
	"ext-json": "*"
  },
  "require-dev": {
	"wpify/plugin-composer-scripts": "^1.2",
	"wpify/tracy": "^1.0"
  },
  "extra": {
	"wpify-scoper": {
	  "prefix": "WpifyPluginSkeletonDeps"
	}
  }
}
