{
  "name": "wpify",
  "version": "1.2.3",
  "main": "assets/plugin.jsx",
  "scripts": {
    "start": "wpify start",
    "build": "wpify build",
    "hot": "wpify hot"
  },
  "author": "Daniel Mejta <daniel@mejta.net>",
  "license": "ISC",
  "sideEffects": [
    "*.scss"
  ],
  "browserslist": [
    "defaults",
    "cover 97%"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react-hooks",
      "babel",
      "react"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "useJSXTextNode": true,
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": false,
      "wp": false,
      "__webpack_public_path__": true,
      "WPIFY": false
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".json"
          ]
        }
      },
      "react": {
        "version": "v16.9.0"
      }
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-css-modules"
    ],
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "/^custom-/"
          ]
        }
      ],
      "order/properties-alphabetical-order": true
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-codeframe-formatter": "^1.0.2",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "stylelint": "^13.3.2",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-formatter-pretty": "^2.0.1",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.17.0",
    "stylelint-webpack-plugin": "^1.2.3",
    "wpify-scripts": "^1.0.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.4",
    "@wordpress/block-editor": "^4.1.0",
    "@wordpress/blocks": "^6.18.0",
    "@wordpress/dom-ready": "^2.9.0",
    "@wordpress/i18n": "^3.13.0",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5"
  }
}
